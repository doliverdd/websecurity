<script type = "text/javascript">
function showCurrentUpdates() {
  document.getElementById("reportPanel").style.visibility="hidden";

var xhttp_current_month;
  var xhttp_previous_month;
  
  var currentTime = new Date();
  var month = ('0' + (currentTime.getMonth()+1))
  var pmonth = ('0' + (currentTime.getMonth()))
  var year = currentTime.getFullYear();

  var current = year + '-' + month;
  var previous = year + '-' + pmonth;
  var displaycurrent = year + '-' + month + '-' + currentTime.getDate();
  



  xhttp_current_month = new XMLHttpRequest();
  xhttp_current_month.onreadystatechange = function() {
    if (xhttp_current_month.readyState == 4 && xhttp_current_month.status == 200) {
      document.getElementById("utm").innerHTML = xhttp_current_month.responseText;
    }
  };
  xhttp_current_month.open("GET", "../../showCurrentUpdates.php?q="+current, true);
  xhttp_current_month.send();   



  xhttp_previous_month = new XMLHttpRequest();
  xhttp_previous_month.onreadystatechange = function() {
    if (xhttp_previous_month.readyState == 4 && xhttp_previous_month.status == 200) {
      document.getElementById("ulm").innerHTML = xhttp_previous_month.responseText;
    }
  };
  xhttp_previous_month.open("GET", "../../showCurrentUpdates.php?q="+previous, true);
  xhttp_previous_month.send();   


xhttp_count_hosts = new XMLHttpRequest();
  xhttp_count_hosts.onreadystatechange = function() {
    if (xhttp_count_hosts.readyState == 4 && xhttp_count_hosts.status == 200) {
      document.getElementById("shc").innerHTML = xhttp_count_hosts.responseText;
    }
  };
  xhttp_count_hosts.open("GET", "../../showHostCount.php", true);
  xhttp_count_hosts.send();   

}


function showCurrentUpdateDetail() {

document.getElementById("updatesPanel").style.visibility="visible";
xhttp_update_detail = new XMLHttpRequest();
  xhttp_update_detail.onreadystatechange = function() {
    if (xhttp_update_detail.readyState == 4 && xhttp_update_detail.status == 200) {
      document.getElementById("updatesPanel").innerHTML = xhttp_update_detail.responseText;
    }
  };
  xhttp_update_detail.open("GET", "../../showCurrentDetail.php", true);
  xhttp_update_detail.send();   
  }
  
  
function showHostUpdates(tdValue) {

tdId=tdValue.innerHTML;
document.getElementById("reportsPanel").style.visibility="visible";

xhttp_show_update_detail = new XMLHttpRequest();
  xhttp_show_update_detail.onreadystatechange = function() {
    if (xhttp_show_update_detail.readyState == 4 && xhttp_show_update_detail.status == 200) {
      document.getElementById("reportSection").innerHTML = xhttp_update_detail.responseText;
    }
  };
  xhttp_update_detail.open("GET", "../../showHostUpdates.php?q="+tdId, true);
  xhttp_update_detail.send();   
  }
  </script>
  
 

